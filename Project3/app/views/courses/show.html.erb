
    <body>
        <!-- Detemines which course to show it attributes from the previous page -->
        
        <!-- Show course attributes -->
        <div class="ml-5">
                <h1><%= @course.number %> - <%= @course.name %></h1>
                <hr>
                <h3>Term:  <%= @course.term %></h3>
                <h3>Campus:  <%= @course.campus %></h3>
                <% if current_user.role == "admin" && not(current_user.pending_approval?) %>
                    <br> <%= link_to "Edit Course", edit_course_path(@course)%>
                <%end%>    
                <br><%= link_to "Course Sections", course_sections_path(@course)%>


                <br><%= link_to "Back To Courses", courses_path %>
        </div>      
            
     
    </body>
