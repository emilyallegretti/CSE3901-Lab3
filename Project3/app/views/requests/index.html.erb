<%if current_user.role == "admin"%>
    <h1 class="ml-5">New Instructor/Admin Requests</h1>
    <table class="table ml-5">
        <tr>
            <th>First Name</th> <th>Last Name</th> <th>Email</th> <th>Requesting Access As An:</th> <th colspan="3">Actions</th></th>
        </tr>
        <% @requests.each do |request| %>
        <tr>
            <td><%= request.fname %></td>
            <td><%= request.lname %></td>
            <td><%= request.email %></td>
            <td><%= request.role.capitalize%>
            <td><%= button_to 'Approve', "/requests/#{request.id}", method: :patch, class: 'btn btn-small btn-primary mx-2' %></td>
        </tr>
    <% end %>
<%end%>
