<!DOCTYPE html>
<html>
  <head>
    <title>The Ohio State University Courses</title>
    <%= stylesheet_link_tag "application", :media => "all"%>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
  <div id = "header">
            <h1>The Ohio State University Courses</h1>
        </div>
    <% if flash.any? %>
  <div id="banner">
  <%flash.each do |key, message|%>
  <div class = "flash <%= key %>" >
  <%=message%>
  </div>
  <%end%>
  </div>
  <%end%>
    <!--p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p-->
    <table id = "menuBar">
      <tr>
        <td>
          <%= button_to "Profile", edit_user_registration_path, method: :get %>
        </td>
        <td>
          <%= button_to "Browse Catalog", courses_path, method: :get %>
        </td>
        <td>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
        </td>
      </tr>
    </table>
    <hr>
    <%= yield %>
  </body>
</html>
