<!DOCTYPE html>
<% if current_user %>
  <%= current_user.email %>
<% end %>
<html>
    <head>
        <title>Courses List</title>
        <meta name="AdminCoursesListView" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
    </head>

    <body>
        <h1>Courses List</h1>
        <table>
            <tr>
                <th>Course Number</th> <th>Course Name</th> <th>Description</th> <th colspan="3">Actions</th></th>
            </tr>
            <% @courses.each do |course| %>
                <tr>
                    <td><%= course.number %></td>
                    <td><%= course.name %></td>
                    <td><%= course.description %></td>
                    <td><%= link_to 'Show', course %></td>
                    <td><%= link_to 'Edit', edit_course_path(course) %></td>
                    <td><%= link_to 'Delete', course, method: :delete ( confirm: 'Are you sure?' ) %></td>
                </tr>
            <% end %>
        </table>
        <br /> <%= link_to 'New Course', new_course_path %>
    </body>
</html>