<h1>Edit Course</h1>
<form action=<%=course_path(@course)%> method="patch">
    <label for="name">Course Name:</label>
    <input type="text" id="name" name="name" value=<%=@course.name%> required><br>

    <label for="number">Course Number:</label>
    <input type="text" id="number" name="number" value=<%=@course.number%> required><br>

    <label for="campus">Campus:</label>
    <input type="text" id="campus" name="campus" value=<%=@course.campus%> required ><br>

    <label for="term">Term:</label>
    <input type="text" id="term" name="term" value=<%=@course.term%> required><br>

    <input type="submit" value="Submit">
<form>